{% extends 'base.html.twig' %}

{% block body %}
    <h1>Workout1s list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Occurrencedate</th>
                <th>Activity</th>
                <th>Hours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workout1 in workout1s %}
            <tr>
                <td><a href="{{ path('workout1_show', { 'id': workout1.id }) }}">{{ workout1.id }}</a></td>
                <td>{% if workout1.occurrenceDate %}{{ workout1.occurrenceDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ workout1.activity }}</td>
                <td>{{ workout1.hours }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('workout1_show', { 'id': workout1.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('workout1_edit', { 'id': workout1.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workout1_new') }}">Create a new workout1</a>
        </li>
    </ul>
{% endblock %}
